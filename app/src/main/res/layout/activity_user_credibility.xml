    <LinearLayout
        android:id="@+id/user_info_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/profile_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/photo"
            />

        <TextView
            android:id="@+id/username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textSize="@dimen/font_size"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingTop="25dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/reputation_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reputation"
        android:textSize="25dp"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_info_linear_layout"/>

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="2.0"
        android:progressTint="@color/green"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reputation_text_view"
        />

    <TextView
        android:id="@+id/badge_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/badge_earnt"
        android:textSize="25dp"
        android:paddingTop="25dp"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rating_bar"/>


    <LinearLayout
        android:id="@+id/badge_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/badge_text_view"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/barge_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/a"/>

        <ImageView
            android:id="@+id/badge_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/b"/>

    </LinearLayout>

    <TextView
        android:id="@+id/progress_bar_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/progress_bar_text"
        android:textSize="25dp"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/badge_linear_layout"/>

    <ProgressBar
        android:id="@+id/status_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/progress_bar_title_text_view"
        android:layout_marginTop="20dp"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="100dp"
        android:minWidth="200dp"
        android:scrollbarSize="10dp"
        android:progress="30" />



</RelativeLayout>
